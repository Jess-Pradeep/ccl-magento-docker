<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="customer_account_navigation">
            <action method="setActive">
                <argument name="path" xsi:type="string">aw_ca/unit</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content" htmlClass="aw-ca-unit-list" htmlTag="div">
            <container name="aw_ca.unit.list.add.container" htmlTag="div" htmlClass="aw-ca-customer-unit-btn-wrapper">
                <block class="Aheadworks\Ca\Block\ButtonWithCheckAcl"
                       name="aw_ca.unit.list.add" template="Aheadworks_Ca::unit/button-unit-check-acl.phtml">
                    <arguments>
                        <argument name="label" xsi:type="string">Add New Unit</argument>
                        <argument name="element_id" xsi:type="string">add-new-unit</argument>
                        <argument name="link" xsi:type="string">aw_ca/unit/new</argument>
                        <argument name="additional_classes" xsi:type="string">primary right</argument>
                        <argument name="onclick_function" xsi:type="string">processTreeAddAction</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Ca\Block\ButtonWithCheckAcl"
                       name="aw_ca.unit.list.edit" template="Aheadworks_Ca::unit/button-unit-check-acl.phtml" cacheable="false">
                    <arguments>
                        <argument name="label" xsi:type="string">Edit Unit</argument>
                        <argument name="element_id" xsi:type="string">edit-unit</argument>
                        <argument name="link" xsi:type="string">aw_ca/unit/edit</argument>
                        <argument name="additional_classes" xsi:type="string">primary right</argument>
                        <argument name="onclick_function" xsi:type="string">processTreeEditAction</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Ca\Block\ButtonWithCheckAcl"
                       name="aw_ca.unit.list.delete" template="Aheadworks_Ca::unit/button-unit-check-acl.phtml">
                    <arguments>
                        <argument name="label" xsi:type="string">Delete</argument>
                        <argument name="element_id" xsi:type="string">delete-unit</argument>
                        <argument name="link" xsi:type="string">aw_ca/unit/delete</argument>
                        <argument name="additional_classes" xsi:type="string">primary right</argument>
                        <argument name="onclick_function" xsi:type="string">processTreeDeleteAction</argument>
                    </arguments>
                </block>
            </container>
            <block class="Aheadworks\Ca\Block\Unit\Tree" name="unit.tree"/>
        </referenceContainer>
    </body>
</page>
