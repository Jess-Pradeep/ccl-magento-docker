<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Aheadworks\Ca\Block\Account\Order\ExtendedHistory"
                   name="sales.order.history"
                   template="Aheadworks_Ca::order/listing.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="uiComponent" xsi:type="string">aw_ca_sales_order_history_listing</argument>
                    <argument name="additionalClasses" xsi:type="string">aw_ca__sales_order_history-listing</argument>
                </arguments>
                <container name="sales.order.history.extra.column.header" as="extra.column.header" label="Order History Extra Column Header">
                </container>
                <block class="Magento\Sales\Block\Order\History\Container" name="sales.order.history.extra.container" as="extra.container">
                    <block class="Magento\Framework\View\Element\Template"
                           name="sales.order.history.extra.container.data" as="extra.container.data"/>
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="sales.order.history.extra.column.header">
            <block name="aw-ca.additional.column.header" template="Aheadworks_Ca::order/history/column/extra-column-header.phtml"/>
        </referenceBlock>

        <referenceBlock name="sales.order.history.extra.container">
            <block name="aw-ca.additional.column.data" template="Aheadworks_Ca::order/history/column/extra-column.phtml"/>
        </referenceBlock>
    </body>
</page>
