<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="paymentMethod" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="methodList" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="aw-ca-order-approval-notice" xsi:type="array">
                                                    <item name="component" xsi:type="string">Aheadworks_Ca/js/view/checkout/order-approval-notice</item>
                                                    <item name="notice" xsi:type="string" translate="true">Your order will be sent to the company admin for approval</item>
                                                    <item name="sortOrder" xsi:type="string">300</item>
                                                    <item name="displayArea" xsi:type="string">before-place-order</item>
                                                    <item name="provider" xsi:type="string">checkoutProvider</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
