<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
         class="Aheadworks\Ca\Ui\Component\Listing\Company\Domain\Listing">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_ca_company_domain_listing.aw_ca_company_domain_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>aw_ca_company_domain_columns</spinner>
        <deps>
            <dep>aw_ca_company_domain_listing.aw_ca_company_domain_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="aw_ca_company_domain_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
                <param name="cacheRequests" xsi:type="boolean">false</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="company_id">*</param>
            </filterUrlParams>
        </settings>
        <dataProvider class="Aheadworks\Ca\Ui\DataProvider\Company\Domain\ListingDataProvider" name="aw_ca_company_domain_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="aw_ca_company_domain_columns">
        <column name="name" sortOrder="20" component="Aheadworks_Ca/js/ui/grid/columns/company/domain/edit-link-action">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="modalDataProvider" xsi:type="string">aw_ca_company_form.awCaCompanyProvider</item>
                    <item name="modalComponent" xsi:type="string">aw_ca_company_form.areas.domains_fieldset.domains_fieldset.domain_configuration_modal</item>
                </item>
            </argument>
            <settings>
                <filter>text</filter>
                <sortable>false</sortable>
                <draggable>false</draggable>
                <label translate="true">Domain Name</label>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select" sortOrder="30">
            <settings>
                <options class="Aheadworks\Ca\Model\Source\Company\Domain\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <sortable>false</sortable>
                <draggable>false</draggable>
                <label translate="true">Status</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="actions" sortOrder="40" component="Aheadworks_Ca/js/ui/grid/columns/company/domain/actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="adminType" xsi:type="string">backend</item>
                    <item name="saveUrl" xsi:type="url" path="aw_ca/company_domain/save"/>
                    <item name="deleteUrl" xsi:type="url" path="aw_ca/company_domain/delete"/>
                    <item name="deleteConfirmationMessage" xsi:type="string" translate="true">Are you sure you want to do this?</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Action</label>
                <bodyTmpl>Aheadworks_Ca/ui/grid/columns/company/domain/cells/actions</bodyTmpl>
                <sortable>false</sortable>
                <draggable>false</draggable>
            </settings>
        </column>
    </columns>
</listing>
