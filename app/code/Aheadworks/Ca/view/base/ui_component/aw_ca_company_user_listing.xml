<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_ca_company_user_listing.aw_ca_company_user_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>company_user_columns</spinner>
        <deps>
            <dep>aw_ca_company_user_listing.aw_ca_company_user_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="aw_ca_company_user_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="company_id">*</param>
            </filterUrlParams>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="aw_ca_company_user_listing_data_source">
            <settings>
                <requestFieldName>company_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="company_user_columns">
        <column name="customer_id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="customer_name" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="customer_email" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Email</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="telephone" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Phone Number</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="role_name" sortOrder="50">
            <settings>
                <label translate="true">Role</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="unit_name" sortOrder="60">
            <settings>
                <label translate="true">Unit</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="job_title" sortOrder="60">
            <settings>
                <label translate="true">Job Position</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <column name="status_title" sortOrder="60" class="Aheadworks\Ca\Ui\Component\Listing\Company\User\StatusColumn">
            <settings>
                <label translate="true">Status</label>
                <bodyTmpl>Aheadworks_UiComponents/grid/cells/text</bodyTmpl>
            </settings>
        </column>
        <actionsColumn name="actions" class="Magento\Customer\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
