<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_ca_company_admin_candidate_listing.aw_ca_company_admin_candidate_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>aw_ca_company_admin_candidate_columns</spinner>
        <deps>
            <dep>aw_ca_company_admin_candidate_listing.aw_ca_company_admin_candidate_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="aw_ca_company_admin_candidate_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
                <param name="cacheRequests" xsi:type="boolean">false</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="company_id">*</param>
                <param name="status">*</param>
            </filterUrlParams>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="aw_ca_company_admin_candidate_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="aw_ca_company_admin_candidate_columns">
        <column name="customer_email" sortOrder="10" class="Aheadworks\UiComponents\Ui\Component\Listing\Columns\LinkColumn" component="Aheadworks_UiComponents/js/grid/columns/link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">customer/index/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">id</item>
                    <item name="entityFieldName" xsi:type="string">customer_id</item>
                </item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Email</label>
            </settings>
        </column>
        <column name="customer_name" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Name</label>
            </settings>
        </column>
        <column name="actions" sortOrder="30" component="Aheadworks_Ca/js/ui/grid/columns/company/admin/candidate/actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="approveUrl" xsi:type="url" path="aw_ca/company_admin/approveCandidate"/>
                    <item name="declineUrl" xsi:type="url" path="aw_ca/company_admin/declineCandidate"/>
                    <item name="confirmationMessage" xsi:type="string" translate="true">Are you sure you want to do this?</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Action</label>
                <bodyTmpl>Aheadworks_Ca/ui/grid/columns/company/admin/candidate/cells/actions</bodyTmpl>
                <sortable>false</sortable>
                <draggable>false</draggable>
            </settings>
        </column>
    </columns>
</listing>
