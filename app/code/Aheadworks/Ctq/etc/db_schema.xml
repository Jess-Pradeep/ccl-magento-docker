<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="aw_ctq_quote" resource="default" engine="innodb" comment="AW Ctq Quote Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Quote Id"/>
        <column xsi:type="int" name="cart_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Cart Id"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Customer Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="last_updated_at" on_update="true" nullable="false"
                default="CURRENT_TIMESTAMP" comment="Last Updated At"/>
        <column xsi:type="varchar" name="status" nullable="false" length="80" comment="Status"/>
        <column xsi:type="int" name="seller_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Seller ID"/>
        <column xsi:type="varchar" name="cc_email_receiver" nullable="true" length="100" comment="CC email receiver"/>
        <column xsi:type="datetime" name="reminder_date" on_update="false" nullable="true" comment="Reminder Date"/>
        <column xsi:type="datetime" name="expiration_date" on_update="false" nullable="true" comment="Expiration Date"/>
        <column xsi:type="varchar" name="reminder_status" nullable="false" length="100" default="ready_to_be_sent"
                comment="Reminder Status"/>
        <column xsi:type="mediumtext" name="cart" nullable="false" comment="Quote Snapshot"/>
        <column xsi:type="int" name="store_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Store Id"/>
        <column xsi:type="varchar" name="negotiated_discount_type" nullable="true" length="40"
                comment="Negotiated Discount Type"/>
        <column xsi:type="decimal" name="negotiated_discount_value" scale="4" precision="12" unsigned="false"
                nullable="true" comment="Negotiated Discount Value"/>
        <column xsi:type="decimal" name="base_quote_total" scale="4" precision="12" unsigned="false" nullable="false"
                default="0" comment="Base Quote Total"/>
        <column xsi:type="decimal" name="quote_total" scale="4" precision="12" unsigned="false" nullable="false"
                default="0" comment="Quote Total"/>
        <column xsi:type="decimal" name="base_quote_total_negotiated" scale="4" precision="12" unsigned="false"
                nullable="false" default="0" comment="Base Quote Total Negotiated"/>
        <column xsi:type="decimal" name="quote_total_negotiated" scale="4" precision="12" unsigned="false"
                nullable="false" default="0" comment="Quote Total Negotiated"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Order ID"/>
        <column xsi:type="varchar" name="customer_email" nullable="true" length="255" comment="Customer Email"/>
        <column xsi:type="varchar" name="customer_first_name" nullable="true" length="255"
                comment="Customer First Name"/>
        <column xsi:type="varchar" name="customer_last_name" nullable="true" length="255" comment="Customer Last Name"/>
        <column xsi:type="varchar" name="hash" nullable="true" length="255" comment="Quote Hash"/>
        <column xsi:type="boolean" name="is_price_visible" nullable="false" default="true" comment="Is Price Visible"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="AW_CTQ_QUOTE_CART_ID" indexType="btree">
            <column name="cart_id"/>
        </index>
        <index referenceId="AW_CTQ_QUOTE_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="AW_CTQ_QUOTE_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
    </table>
    <table name="aw_ctq_comment" resource="default" engine="innodb" comment="AW Ctq Comment">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Comment Id"/>
        <column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Quote Id"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="mediumtext" name="comment" nullable="false" comment="comment"/>
        <column xsi:type="varchar" name="owner_type" nullable="false" length="15" comment="Owner Type"/>
        <column xsi:type="int" name="owner_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Owner Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AW_CTQ_COMMENT_QUOTE_ID_AW_CTQ_QUOTE_ID" table="aw_ctq_comment"
                    column="quote_id" referenceTable="aw_ctq_quote" referenceColumn="id" onDelete="CASCADE"/>
        <index referenceId="AW_CTQ_COMMENT_QUOTE_ID" indexType="btree">
            <column name="quote_id"/>
        </index>
        <index referenceId="AW_CTQ_COMMENT_OWNER_ID" indexType="btree">
            <column name="owner_id"/>
        </index>
    </table>
    <table name="aw_ctq_comment_attachment" resource="default" engine="innodb" comment="Aw Ctq Attachments">
        <column xsi:type="int" name="attachment_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Attachment Id"/>
        <column xsi:type="int" name="comment_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Comment Id"/>
        <column xsi:type="text" name="name" nullable="false" comment="Name"/>
        <column xsi:type="text" name="file_name" nullable="false" comment="File Name On The Server"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attachment_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AW_CTQ_COMMENT_ATTACHMENT_COMMENT_ID_AW_CTQ_COMMENT_ID"
                    table="aw_ctq_comment_attachment" column="comment_id" referenceTable="aw_ctq_comment"
                    referenceColumn="id" onDelete="CASCADE"/>
        <index referenceId="AW_CTQ_COMMENT_ATTACHMENT_COMMENT_ID" indexType="btree">
            <column name="comment_id"/>
        </index>
    </table>
    <table name="aw_ctq_history" resource="default" engine="innodb" comment="AW Ctq History">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="History Id"/>
        <column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Quote Id"/>
        <column xsi:type="varchar" name="status" nullable="false" length="50" comment="Action"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="varchar" name="owner_type" nullable="false" length="15" comment="Owner Type"/>
        <column xsi:type="int" name="owner_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Owner Id"/>
        <column xsi:type="mediumtext" name="actions" nullable="false" comment="Actions"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AW_CTQ_HISTORY_QUOTE_ID_AW_CTQ_QUOTE_ID" table="aw_ctq_history"
                    column="quote_id" referenceTable="aw_ctq_quote" referenceColumn="id" onDelete="CASCADE"/>
        <index referenceId="AW_CTQ_HISTORY_QUOTE_ID" indexType="btree">
            <column name="quote_id"/>
        </index>
        <index referenceId="AW_CTQ_HISTORY_OWNER_ID" indexType="btree">
            <column name="owner_id"/>
        </index>
    </table>
    <table name="quote" resource="checkout" comment="Sales Flat Quote">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
        <column xsi:type="int" name="aw_ctq_seller_id" unsigned="true" nullable="true" identity="false"
                comment="AW CTQ Seller ID"/>
        <column xsi:type="int" name="aw_ctq_quote_list_customer_id" unsigned="true" nullable="true" identity="false"
                comment="AW CTQ Quote List Customer ID"/>
        <column xsi:type="int" name="aw_ctq_is_quote_list" unsigned="true" nullable="true" identity="false"
                comment="AW CTQ Is Quote List Flag"/>
    </table>
    <table name="quote_item" resource="checkout" comment="Sales Flat Quote Item">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
        <column xsi:type="decimal" name="aw_ctq_percent" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Percent"/>
        <column xsi:type="int" name="aw_ctq_calculate_type" unsigned="true" nullable="true" identity="false"
                comment="AW CTQ Calculate Type"/>
        <column xsi:type="int" name="aw_ctq_sort_order" unsigned="true" nullable="true" identity="false"
                comment="AW CTQ Sort Order"/>
        <column xsi:type="varchar" name="aw_ctq_item_comment" nullable="true" length="255" comment="AW CTQ Item Comment"/>
    </table>
    <table name="quote_address" resource="checkout" comment="Sales Flat Quote Address">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
    </table>
    <table name="quote_address_item" resource="checkout" comment="Sales Flat Quote Address Item">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
        <column xsi:type="decimal" name="aw_ctq_percent" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Percent"/>
    </table>
    <table name="sales_creditmemo" resource="sales" comment="Sales Flat Creditmemo">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
    </table>
    <table name="sales_creditmemo_item" resource="sales" comment="Sales Flat Creditmemo Item">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
    </table>
    <table name="sales_invoice" resource="sales" comment="Sales Flat Invoice">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
    </table>
    <table name="sales_invoice_item" resource="sales" comment="Sales Flat Invoice Item">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
    </table>
    <table name="sales_order" resource="sales" comment="Sales Flat Order">
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
        <column xsi:type="decimal" name="aw_ctq_invoiced" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Invoiced"/>
        <column xsi:type="decimal" name="base_aw_ctq_invoiced" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Invoiced"/>
        <column xsi:type="decimal" name="aw_ctq_refunded" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Refunded"/>
        <column xsi:type="decimal" name="base_aw_ctq_refunded" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Refunded"/>
    </table>
    <table name="sales_order_item" resource="sales" comment="Sales Flat Order Item">
        <column xsi:type="decimal" name="aw_ctq_percent" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Percent"/>
        <column xsi:type="decimal" name="aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Amount"/>
        <column xsi:type="decimal" name="base_aw_ctq_amount" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Amount"/>
        <column xsi:type="decimal" name="aw_ctq_invoiced" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Invoiced"/>
        <column xsi:type="decimal" name="base_aw_ctq_invoiced" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Invoiced"/>
        <column xsi:type="decimal" name="aw_ctq_refunded" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Refunded"/>
        <column xsi:type="decimal" name="base_aw_ctq_refunded" scale="4" precision="12" unsigned="false" nullable="true"
                comment="AW CTQ Base Refunded"/>
    </table>
</schema>
