<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      component="Aheadworks_Ca/js/ui/form/company_form">
    <fieldset name="credit_limit_fieldset">
        <container name="aw_credit_limit_top_totals">
            <container name="payment_period">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="component" xsi:type="string">Aheadworks_CreditLimit/js/ui/customer/top-totals/total</item>
                        <item name="label" xsi:type="string" translate="true">Credit Terms</item>
                        <item name="dataType" xsi:type="string">days</item>
                    </item>
                </argument>
            </container>
            <container name="due_date">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="component" xsi:type="string">Aheadworks_CreditLimit/js/ui/customer/top-totals/total</item>
                        <item name="label" xsi:type="string" translate="true">Due Date</item>
                        <item name="dataType" xsi:type="string">due_date</item>
                    </item>
                </argument>
            </container>
        </container>
        <field name="payment_period" formElement="input" sortOrder="25" class="Aheadworks\CreditLimit\Ui\Component\Form\Company\Field\PaymentPeriod">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="notice" xsi:type="string" translate="true">(Payment Period for the Credit Limit (in days))</item>
                </item>
            </argument>
            <settings>
                <label>Credit Period</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <tooltip>
                    <description translate="true">Credit Period field is not available when Due Date is set</description>
                </tooltip>
            </settings>
        </field>
        <field name="due_date" formElement="hidden" sortOrder="26">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="credit_balance" formElement="hidden" sortOrder="27">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
    </fieldset>
</form>
